model Usuario {
  id      Int      @id @default(autoincrement())
  usuario   String   @unique
  comentarios
  dataPublicacao
  classificacao
  publicacao
  nome    String
}

model Post {
  id        Int      @id @default(autoincrement())
  historico     String
  content   String?
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}