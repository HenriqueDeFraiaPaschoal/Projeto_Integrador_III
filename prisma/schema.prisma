model Usuario {
  id      ObjectId      @id @map("_id") @test.Ignore // Mapeando o campo da chave primária, pois o Prisma não aceita a sintaxe "_id" do MongoDB
  historico ObjectId[] @test.Ignore // Estes @test.Ignore estão dizendo que o Prisma não irá gerenciar os campos que são específicos do MongoDB
  nome String
  sobrenome String
  email   String   @unique
  senha String
  steak Int
  streakDate String
}

model Post {
  id        Int      @id @default(autoincrement())
  usuario: Usuario[]
  comentarios: ObjectId[]
  dataPublicacao: DateTime
  publicação: String
  classificação String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}