generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model User {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  username     String
  email        String     @unique
  senha        String
  posts     Post[]
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  parentId  String?  @db.ObjectId
  userId    String  @db.ObjectId
  postDate  DateTime
  content   String

  User      User     @relation(fields: [userId], references: [id])
  Parent    Post?    @relation("PostToParent", fields: [parentId], references: [id])
}
