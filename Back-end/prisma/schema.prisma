generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  userName     String
  email        String     @unique
  senha        String
}

model Post {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  parentId        String?    @db.ObjectId
  usuarioId       String     @unique @db.ObjectId
  postDate        DateTime
  content         String
}
