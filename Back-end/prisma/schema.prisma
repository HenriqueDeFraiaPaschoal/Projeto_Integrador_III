generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String      @id @default(auto()) @map("_id")  @db.ObjectId
  historico    String[]
  nome         String
  sobrenome    String
  email        String     @unique
  senha        String
  streak        Int
  streakDate   String
  posts        String[]     // Definindo o relacionamento "um para muitos" com Post
}

model Post {
  id              String      @id @default(auto()) @map("_id")  @db.ObjectId
  usuario_id      String      @db.ObjectId   // Campo para armazenar o ID do autor da publicação, relacionando com Usuario
  dataPublicacao  DateTime
  publicacao      String
  classificacao   String
}