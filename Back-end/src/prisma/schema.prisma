generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  posts        Post[]     @relation("UsuarioPosts")
  nome         String
  sobrenome    String
  email        String     @unique
  senha        String
}

model Post {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  parentId        String?
  usuario         String     @relation("UsuarioPosts", fields: [usuario], references: [id])
  comentarios     Post[]     @relation("ComentarioPosts", references: [id])
  dataPublicacao  DateTime
  publicacao      String
}
